{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
   
    "removeComments": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": ["vite/client" ]
  },
  "exclude": ["node_modules"]
}

